<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
<class name="com.nikhil.dto.User" table="USER">
<meta attribute="class-description">
This class contains the user detail. </meta>

<id name="uid" type="int" column="uid">
<generator class="native"/>
</id>

<property name="name" column="name" type="string"></property>

<property name="address" column="address" type="string"></property>
<property name="phone" column="phone" type="big_decimal"></property>
<property name="dob" column="DOB" type="date"></property>


</class>
</hibernate-mapping>